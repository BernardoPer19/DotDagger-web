
---
const projects = [
  {
    title: "Proyecto 1",
    des: "Pegarle a la madera como imbecil para no morir",
    iframe: "https://tbot.xyz/lumber/",
  },
  {
    title: "Proyecto 2",
    des: "Un gatito jugando como imbecil que lindo",
    iframe: "https://coyoteke.com/littlePrince/pet.html",
  },
  {
    title: "Proyecto 3",
    des: "Una maldita nave volando",
    iframe: "https://coyoteke.com/littlePrince/",
  },
];
---
<section class="bg-customColor1 h-[80vh] p-20 dark:bg-customColor6">
  <h2 class="text-center text-4xl font-bold text-gray-100 mb-10 dark:text-white">
    Proyectos
  </h2>
  <div
    class="container mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
    data-aos="fade-left"
    data-aos-offset="400"
    data-aos-easing="ease-in-sine"
  >
    {projects.map((project) => (
      <div class="bg-customColor2 dark:bg-customColor1 rounded-xl shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-105">
        <iframe
          src={project.iframe}
          class="rounded-t-xl w-full h-64"
        ></iframe>
        <div class="p-8">
          <h3 class="text-xl font-semibold text-white mb-4 dark:text-gray-300">
            {project.title}
          </h3>
          <p class="text-gray-100 dark:text-gray-300 p-6">{project.des}</p>
          <button class="w-full bg-custom1 text-white py-2 px-4 rounded-lg hover:bg-custom2 transition duration-300 dark:bg-gray-700 dark:text-gray-200 dark:hover:bg-gray-600">
            Dale click a las imagenes para jugar :D
          </button>
        </div>
      </div>
    ))}
  </div>
</section>
